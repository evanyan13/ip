<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?> <!-- Import the Circle shape -->

<fx:root xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" type="HBox"
         alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         prefWidth="400.0" spacing="10.0" xmlns:profiler="http://javafx.com/javafx/17" styleClass="dialog-box">
    <children>
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle centerX="30.0" centerY="30.0" radius="30.0"/>
            </clip>
        </ImageView>
        <Label fx:id="dialog" text="Label" wrapText="true" styleClass="dialog-label"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>